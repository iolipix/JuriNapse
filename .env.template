# Template de fichier .env pour JuriNapse
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Base de données MongoDB
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE_NAME?retryWrites=true&w=majority
DB_NAME=your_database_name

# Configuration serveur
NODE_ENV=development
PORT=5000

# JWT Secret (générez une clé secrète forte)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# URLs de l'application (ajustez selon votre environnement)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Configuration email (si utilisée)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Configuration Google Ads
# Remplacez par votre vrai client ID Google AdSense
VITE_GOOGLE_ADS_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX
# Définir sur true pour le mode test (éviter les violations Google)
VITE_GOOGLE_ADS_TEST_MODE=true
# Définir sur true pour activer les publicités
VITE_GOOGLE_ADS_ENABLED=true

# Autres configurations spécifiques à votre environnement
# Ajoutez ici toute autre variable nécessaire
