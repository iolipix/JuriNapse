# MongoDB Configuration
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER/DATABASE?retryWrites=true&w=majority&appName=APPNAME
DB_USER=your_mongodb_username
DB_PASSWORD=your_mongodb_password
DB_CLUSTER=your_cluster.mongodb.net
DB_APP_NAME=your_app_name

# Database Name
DB_NAME=your_database_name

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# JWT Secret (générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_very_secure_random_jwt_secret_here

# Niveau de logs: silent|minimal|normal|debug
LOG_LEVEL=minimal
